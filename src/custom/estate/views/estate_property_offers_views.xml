<odoo>
  <data>
    <!-- Property Offers Views -->
    <record id="estate_property_offers_view_form" model="ir.ui.view">
      <field name="name">estate.property.offer.form</field>
      <field name="model">estate.property.offer</field>
      <field name="arch" type="xml">
        <form string="Property Offers">
          <sheet>
            <group>
              <field name="price"/>
              <field name="partner_id"/>
              <field name="validity" string="Validity (days)"/>
              <field name="date_deadline" string="Deadline"/>
              <field name="status"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="estate_property_offers_view_tree" model="ir.ui.view">
      <field name="name">estate.property.offer.tree</field>
      <field name="model">estate.property.offer</field>
      <field name="arch" type="xml">
        <tree decoration-danger="status=='refused'" decoration-success="status=='accepted'">
          <field name="price"/>
          <field name="partner_id"/>
          <field name="validity" string="Validity (days)"/>
          <field name="date_deadline" string="Deadline"/>
          <button name="action_accept_offer" type="object" icon="fa-check" attrs="{'invisible': ['|', ('status', '=', 'accepted'), ('status', '=', 'refused')]}"/>
          <button name="action_refuse_offer" type="object" icon="fa-times" attrs="{'invisible': ['|', ('status', '=', 'accepted'), ('status', '=', 'refused')]}"/>
          <field name="status" optional="hide"/>
        </tree>
      </field>
    </record>

  </data>
</odoo>